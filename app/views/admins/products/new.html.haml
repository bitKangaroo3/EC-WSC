%div.container.mx-auto.w-75
	%h1.text-center.mb-5 新規商品の追加
	= simple_form_for(@product) do |f|
		= f.error_notification

		= f.input :name
		= f.input :description
		= f.input :price
		= f.input :unit, as: :select, collection: [['¥', 'yen', data: {unit: 'yen'}], ['$', 'dollar', data: {unit: 'dollar'}]]
		= f.input :photo
		= f.button :submit, class: "btn-block btn-info my-5"
